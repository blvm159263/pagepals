type Campaign {
    id: ID!
    title: String
    description: String
    startAt: String
    endAt: String
    imageUrl: String
    saleLimit: Int
    expOfPromotion: String
    status: Status
    state: CampaignEnum
    promotions: [Promotion]
}

input CampaignCreateInput {
    title: String
    description: String
    startAt: String
    endAt: String
    imageUrl: String
    saleLimit: Int
    expOfPromotion: String
    status: Status
    state: CampaignEnum
}

input CampaignUpdateInput {
    title: String
    description: String
    startAt: String
    endAt: String
    imageUrl: String
    saleLimit: Int
    expOfPromotion: String
    status: Status
    state: CampaignEnum
}

extend type Query {
    getListCampaigns(query: QueryInput): [Campaign]
    getCampaign(id: ID!): Campaign
}

extend type Mutation {
    createCampaign(campaign: CampaignCreateInput): Campaign
    updateCampaign(id: ID!, campaign: CampaignUpdateInput): Campaign
    deleteCampaign(id: ID!): Campaign
}